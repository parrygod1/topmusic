{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build args",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++0x",
                "-g",
                "server.cpp",
                "server_cmd.cpp", "sql_query.cpp",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "-I/usr/include",
                "-lsqlite3",
                "-lpthread",   
                "-export-dynamic"
            ],
            "options": {

            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}