{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build server",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++0x",
                "-g",
                "serversrc/server.cpp",
                "serversrc/server_cmd.cpp", "serversrc/sql_query.cpp",
                "-o",
                "${workspaceFolder}/server",
                "-I/usr/include",
                "-lsqlite3",
                "-lpthread",   
                "-export-dynamic"
            ],
            "options": {

            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "build client",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++0x",
                "-g",
                "clientsrc/client.cpp",
                "clientsrc/UI_component.cpp",
                "-o",
                "${workspaceFolder}/client",
                "-I/usr/include",
                "-lsqlite3",
                "-lpthread",   
                "-export-dynamic"
            ],
            "options": {

            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "build all",
            "dependsOn": [
                "build client",
                "build server"
            ]
        }
    ]
}